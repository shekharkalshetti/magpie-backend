# ==============================================
# Magpie AI - Docker Environment Configuration
# ==============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# ----------------------------------------------
# Database Configuration
# ----------------------------------------------
POSTGRES_DB=magpie
POSTGRES_USER=magpie
# Generate: openssl rand -hex 16
POSTGRES_PASSWORD=your-secure-postgres-password-here

# ----------------------------------------------
# Security & Authentication
# ----------------------------------------------
# Generate: openssl rand -hex 32
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-here

# Admin user credentials (created on first startup)
ADMIN_EMAIL=admin@magpie.local
# Generate: openssl rand -base64 16
ADMIN_PASSWORD=your-admin-password-here

# ----------------------------------------------
# CORS Configuration
# ----------------------------------------------
# JSON array format - update with your frontend URL
# For EC2 deployment, use your public IP or domain
ALLOWED_ORIGINS=["http://localhost:3000","http://your-ec2-ip:3000","https://yourdomain.com"]

# ----------------------------------------------
# LLM Configuration
# ----------------------------------------------
# Internal Docker network URL (no need to change)
VLLM_URL=http://llm:1234

# Model configuration (optional overrides)
# MODEL_NAME=Qwen/Qwen2.5-1.5B-Instruct
# MAX_MODEL_LENGTH=4096
# GPU_MEMORY_UTILIZATION=0.7

# ----------------------------------------------
# Redis Configuration
# ----------------------------------------------
# Internal Docker network URL (no need to change)
REDIS_URL=redis://redis:6379/0

# ----------------------------------------------
# Application Settings
# ----------------------------------------------
ENVIRONMENT=production
DEBUG=False

# ----------------------------------------------
# Celery Configuration
# ----------------------------------------------
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1

# ----------------------------------------------
# Nginx/SSL Configuration (optional)
# ----------------------------------------------
# Domain name for Let's Encrypt
# DOMAIN=api.yourdomain.com
# EMAIL=admin@yourdomain.com
